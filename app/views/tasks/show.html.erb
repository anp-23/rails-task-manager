<h1 class= 'p-5'><%= @task.title %></h1>
<h3>Detalles: <%= @task.details %></h3>
<h4>Completado: <%= @task.completed %></h4>

<%= link_to "Editar", edit_task_path(@task) %>
<br>
<%= link_to "Volver", tasks_path %>
<br>
<%= link_to "Borrar #{@task.title}", task_path(@task), method: :delete, data: { confirm: "Estas seguro?" } %>
